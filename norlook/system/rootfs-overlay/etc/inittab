# /etc/inittab
#
# Format for each entry: <id>:<runlevels>:<action>:<process>
#
# id        == tty to run on, or empty for /dev/console
# runlevels == ignored
# action    == one of sysinit, respawn, askfirst, wait, and once
# process   == program to run

id:3:initdefault:

# Remount rootfs in read-only mode
si0::sysinit:/bin/mount -t sysfs sysfs /sys
si1::sysinit:/bin/mount -t proc  proc  /proc
si2::sysinit:/bin/mount / -o remount,ro

# Do it once
si3::sysinit:/bin/mkdir -p /dev/pts
si4::sysinit:/bin/mkdir -p /dev/shm
si5::sysinit:/bin/mount -a

si6::sysinit:/bin/ln -sf /proc/self/fd   /dev/fd     2>/dev/null
si7::sysinit:/bin/ln -sf /proc/self/fd/0 /dev/stdin  2>/dev/null
si8::sysinit:/bin/ln -sf /proc/self/fd/1 /dev/stdout 2>/dev/null
si9::sysinit:/bin/ln -sf /proc/self/fd/2 /dev/stderr 2>/dev/null

si10::sysinit:/sbin/udevd -d
si11::sysinit:/sbin/udevadm trigger --type=subsystems --action=add
si12::sysinit:/sbin/udevadm trigger --type=devices    --action=add
si13::sysinit:/sbin/udevadm settle  --timeout=30

si14::sysinit:/bin/hostname -F /etc/hostname
si15::sysinit:/bin/ls -Al /dev/s*

# Startup the system
#rcS:12345:wait:/etc/init.d/rcS

# Console on serial port
#sole::respawn:/sbin/getty -L console 0 vt100

# Local consoles
#c1:12345:respawn:/bin/sh
#c2:12345:respawn:/bin/sh
#c3:12345:respawn:/bin/sh
#c4:12345:respawn:/bin/sh

# Stuff to do for the 3-finger salute
ca::ctrlaltdel:/sbin/reboot

# Stuff to do before rebooting
shd0:06:wait:/etc/init.d/rcK

# The usual halt or reboot actions
hlt0:0:wait:/sbin/halt -dhp
reb0:6:wait:/sbin/reboot
